{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Heimdall Sort",
    "version": "1.1.1",
    "identifier": "no.haklon.heimdallsort",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "externalBin": [
            "binaries/ffmpeg",
            "binaries/ffprobe"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Heimdall Sort",
                "width": 1200,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "center": true
            }
        ],
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "**"
                ]
            }
        }
    },
    "plugins": {
        "shell": {
            "all": true,
            "open": true
        }
    }
}